<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StudentsFragment">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.Student_Fragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/first_yr_row"
                android:layout_height="80sp"
                app:cardBackgroundColor="#d9ffe4"
                app:cardCornerRadius="5sp"
                app:cardElevation="6sp"
                app:contentPadding="5sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10sp"
                    android:text="First year"
                    android:textSize="20sp" />

            </android.support.design.card.MaterialCardView>
            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/second_yr_row"
                android:layout_height="80sp"
                app:cardBackgroundColor="#d9ffe4"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="5sp"
                app:cardElevation="6sp"
                app:contentPadding="5sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10sp"
                    android:text="Second year"
                    android:textSize="20sp" />

            </android.support.design.card.MaterialCardView>
            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/third_yr_row"
                android:layout_height="80sp"
                app:cardBackgroundColor="#d9ffe4"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="5sp"
                app:cardElevation="6sp"
                app:contentPadding="5sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="10sp"
                    android:text="Third year"
                    android:textSize="20sp" />

            </android.support.design.card.MaterialCardView>
            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/fourth_yr_row"
                android:layout_height="80sp"
                app:cardBackgroundColor="#d9ffe4"
                android:layout_marginTop="10sp"
                app:cardCornerRadius="5sp"
                app:cardElevation="6sp"
                app:contentPadding="5sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10sp"
                    android:text="Fourth year"
                    android:textSize="20sp" />

            </android.support.design.card.MaterialCardView>
            <android.support.design.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/fifth_yr_row"
                android:layout_height="80sp"
                android:layout_marginTop="10sp"
                app:cardBackgroundColor="#d9ffe4"
                app:cardCornerRadius="5sp"
                app:cardElevation="6sp"
                app:contentPadding="5sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10sp"
                    android:gravity="center_vertical"
                    android:layout_marginRight="10sp"
                    android:text="Fifth year"
                    android:textSize="20sp" />

            </android.support.design.card.MaterialCardView>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>